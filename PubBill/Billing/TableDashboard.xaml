<Window x:Class="PubBill.Billing.TableDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PubBill.Billing"
		xmlns:common="clr-namespace:PubBill.Common"
        mc:Ignorable="d" WindowState="Maximized"
        Title="Tables" Height="450" Width="800"
		Loaded="Window_Loaded" Closed="Window_Closed">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<ScrollViewer HorizontalScrollBarVisibility="Visible">
			<Grid Grid.Row="0">
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="*"/>
				</Grid.RowDefinitions>

				<Grid Grid.Row="0" HorizontalAlignment="Center">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="Auto"/>
						<ColumnDefinition Width="Auto"/>
						<ColumnDefinition Width="Auto"/>
					</Grid.ColumnDefinitions>

					<TextBlock x:Name="dateTimeTextBlock" Text="Date Time" Grid.Column="0" Margin="10" Padding="5" />
					<TextBlock x:Name="locationTextBlock" Text="Location" Grid.Column="1" Margin="10" Padding="5" />
					<TextBlock x:Name="userTextBlock" Text="User" Grid.Column="2" Margin="10" Padding="5" />
				</Grid>

				<Grid Grid.Row="1">
					<StackPanel Orientation="Vertical">
						<Expander Header="Area1" IsExpanded="True" Margin="10">
							<ListView Margin="10" Padding="5">
								<ListViewItem Content="Table 1" />
								<ListViewItem Content="Table 1" />
								<ListViewItem Content="Table 1" />
								<ListViewItem Content="Table 1" />
							</ListView>
						</Expander>

						<Expander Header="Area2" IsExpanded="True" Margin="10">
							<ListView Margin="10" Padding="5">
								<ListViewItem Content="Table 1" />
								<ListViewItem Content="Table 1" />
								<ListViewItem Content="Table 1" />
								<ListViewItem Content="Table 1" />
							</ListView>
						</Expander>
					</StackPanel>
				</Grid>
			</Grid>
		</ScrollViewer>

		<common:FooterControl Grid.Row="1"/>
	</Grid>

</Window>
